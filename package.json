{
  "name": "cntdys",
  "version": "0.1.0",
  "description": "more calendar for less bytes",
  "keywords": [
    "calendar",
    "date picker",
    "date range selector"
  ],
  "author": "Ziga Vidic <zigomir@gmail.com> (https://zigomir.com/)",
  "license": "MIT",
  "main": "dist/bundle.min.js",
  "module": "dist/main.js",
  "scripts": {
    "lint": "tslint --project tsconfig.json --type-check **/*.ts",
    "test:dev": "jest --watch",
    "test": "npm run lint && jest",
    "dev": "tsc --watch & rollup --config --watch",
    "build": "tsc && rollup --environment BUILD:production --config && rm -r dist/{src,test}",
    "format": "prettier --single-quote --no-semi --print-width 120 --write {**/*.ts,*.js}"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^19.2.4",
    "jest": "^20.0.4",
    "prettier": "^1.4.4",
    "rollup": "^0.42.0",
    "rollup-plugin-babili": "^3.1.0",
    "rollup-watch": "^4.0.0",
    "ts-jest": "^20.0.6",
    "tslint": "^5.4.3",
    "tslint-config-prettier": "^1.1.0",
    "typescript": "^2.3.4"
  }
}
