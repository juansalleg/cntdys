{
  "name": "cntdys",
  "version": "0.2.8",
  "description": "more calendar for less bytes",
  "keywords": [
    "calendar"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zigomir/cntdys.git"
  },
  "homepage": "https://github.com/zigomir/cntdys",
  "author": "Ziga Vidic <zigomir@gmail.com> (https://zigomir.com/)",
  "license": "MIT",
  "main": "dist/main.js",
  "module": "dist/main.js",
  "types": "dist/types/src/main.d.ts",
  "files": [
    "dist/"
  ],
  "bundlesize": [
    {
      "path": "./dist/main.min.js",
      "maxSize": "666 B"
    }
  ],
  "scripts": {
    "lint": "tslint --project tsconfig.json **/*.ts",
    "test:dev": "jest --watch",
    "test": "npm run lint && jest --coverage && npm run build && bundlesize",
    "dev": "tsc --watch",
    "clean": "rm -rf build/* && rm -rf dist/*",
    "build": "npm run clean && tsc && cp build/src/main.js dist/main.js && uglifyjs --compress --mangle -- dist/main.js > dist/main.min.js",
    "prepublishOnly": "npm run test"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "bundlesize": "^0.17.0",
    "jest": "^22.4.3",
    "ts-jest": "^22.4.5",
    "tslint": "^5.10.0",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.8.3",
    "uglify-es": "^3.3.9"
  }
}
