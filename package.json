{
  "name": "cntdys",
  "version": "0.1.0",
  "description": "more calendar for less bytes",
  "keywords": [
    "calendar",
    "date picker",
    "date range selector"
  ],
  "author": "Ziga Vidic <zigomir@gmail.com> (https://zigomir.com/)",
  "license": "MIT",
  "main": "src/main.ts",
  "scripts": {
    "test": "jest",
    "build": "tsc && rollup --config && rollup --config rollup.config.min.js",
    "format": "prettier --single-quote --no-semi --print-width 120 --write {**/*.ts,*.js}"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^19.2.4",
    "jest": "^20.0.4",
    "prettier": "^1.4.4",
    "rollup": "^0.42.0",
    "rollup-plugin-uglify": "^2.0.1",
    "ts-jest": "^20.0.6",
    "typescript": "^2.3.4"
  }
}
