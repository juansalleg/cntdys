{
  "name": "cntdys",
  "version": "0.1.0",
  "description": "more calendar for less bytes",
  "keywords": [
    "calendar",
    "date picker",
    "date range selector"
  ],
  "author": "Ziga Vidic <zigomir@gmail.com> (https://zigomir.com/)",
  "license": "MIT",
  "main": "src/main.js",
  "module": "dist/main.js",
  "scripts": {
    "lint": "tslint --project tsconfig.json --type-check **/*.ts",
    "test:dev": "jest --watch",
    "test": "npm run lint && jest",
    "dev": "tsc --watch",
    "format": "prettier --single-quote --no-semi --print-width 120 --write {**/*.ts,*.js}"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^21.2.1",
    "jest": "^21.2.1",
    "prettier": "^1.7.2",
    "ts-jest": "^21.0.1",
    "tslint": "^5.7.0",
    "tslint-config-prettier": "^1.5.0",
    "typescript": "^2.5.3"
  }
}
